<h1>blog</h1>


<% @posts.each do |post| %>
  <div class="container">
    <div class="post-title">
      <h1><%= post.title %></h1>
    </div>
    <p><%= post.body_one %></p>
    <div class="gist-wrapper">
      <script src="<%= post.gist %>"></script>
    </div>
    <p><%= post.body_two %></p>
  </div>
<% end %>
