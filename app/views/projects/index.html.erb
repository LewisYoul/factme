<div class="container">
  <div class="project--header-wrapper">
    <h1>Projects</h1>
    <p>A list of personal projects and collaborations</p>
  </div>
  <hr>

  <% @projects.each.with_index do |project, i| %>
    <div class="project--wrapper">
      <div class="project--title-mobile">
        <h3><strong><%= project['title'] %></strong></h3>
      </div>
      <div class="project--image-wrapper">
        <%= image_tag(project['image'], class: "project--image", title: project['title']) %>
      </div>
      <div class="vertical-line"></div>
      <div class="project--summary-wrapper">
        <div class="project--title-desktop">
          <h3><strong><%= project['title'] %></strong></h3>
        </div>
        <p><%= raw project['synopsis'] %></p>
        <%= link_to project['play'], target: '_blank', title: "Play #{project['title']}", class: "icon-link" do %>
          <%= fa_icon "2x gamepad", class: 'icon' %>
        <% end %>
        <%= link_to project['github'], target: '_blank', title: "View the source code for #{project['title']}", class: "icon-link" do %>
          <%= fa_icon "2x github", class: 'icon' %>
        <% end %>
      </div>
    </div>

    <% if (i + 1) != @projects.length %>
      <hr class="project--divider-mobile">
    <% end %>
  <% end %>
</div>
